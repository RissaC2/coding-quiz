var timel = document.querySelector(".timer");

var secondsleft = 50;

function setTime() {
var timerInterval = setInterval(function () {
  secondsLeft--;
  timeEl.textContent = secondsLeft + " seconds left till colorsplosion.";

  if (secondsLeft === 0) {
    clearInterval(timerInterval);

    sendMessage();
  }
}, 1000000);
}




